{
  "compilerOptions": {
    "target": "ES6",                // or "ES2015"
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,            // Generate .d.ts files
    "declarationDir": "./dist",     // Where to output .d.ts files
    "lib": ["ES2015", "DOM"]        // Include ES6 and DOM libs
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
